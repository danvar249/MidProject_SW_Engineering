<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OrderReceiptPageController">
   <children>
      <Pane prefHeight="447.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(from -200px 0px to 0px 1400px, #a837b4, transparent);">
         <children>
            <Text fx:id="txtOrderNumber" fill="WHITE" layoutX="87.0" layoutY="315.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order number: XXXXXXX">
               <font>
                  <Font name="Arial Rounded MT Bold" size="19.0" />
               </font></Text>
            <Text fx:id="txtOrderTotal" fill="WHITE" layoutX="121.0" layoutY="337.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order total: XXXX">
               <font>
                  <Font name="Arial Rounded MT Bold" size="19.0" />
               </font></Text>
            <Text fx:id="txtCustomerEmail" fill="WHITE" layoutX="69.0" layoutY="77.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order information was sent to&#10;XXXXX@XXXX.COM" textAlignment="CENTER">
               <font>
                  <Font name="Arial Rounded MT Bold" size="18.0" />
               </font></Text>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="125.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/checkmark%20(1).png" />
               </image>
            </ImageView>
            <Button fx:id="btnLogout" layoutX="14.0" layoutY="386.0" mnemonicParsing="false" onAction="#getBtnLogout" style="-fx-background-radius: 300; -fx-border-radius: 300;" stylesheets="@buttonCSS.css" text="Logout" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB" size="20.0" />
               </font></Button>
            <Button fx:id="btnBack" layoutX="288.0" layoutY="386.0" mnemonicParsing="false" onAction="#getBtnBack" style="-fx-background-radius: 300; -fx-border-radius: 300;" stylesheets="@buttonCSS.css" text="Catalog" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB" size="20.0" />
               </font></Button>
            <Text fill="WHITE" layoutX="53.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ORDER COMPLETE!" underline="true">
               <font>
                  <Font name="Arial Rounded MT Bold" size="30.0" />
               </font>
            </Text>
            <Text fx:id="txtBillingDate" fill="WHITE" layoutX="140.0" layoutY="293.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Billing Date: ">
               <font>
                  <Font name="Arial Rounded MT Bold" size="19.0" />
               </font>
            </Text>
            <Text fx:id="txtDeliveryAddress" layoutX="14.0" layoutY="367.0" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font name="Berlin Sans FB" size="20.0" />
               </font>
            </Text>
            <ImageView fitHeight="74.0" fitWidth="98.0" layoutX="163.0" layoutY="370.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/logo%20final%20-%20yellow.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
</VBox>
