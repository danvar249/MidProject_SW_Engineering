<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ek_configuration._EKConfigurationOrderReceiptController">
   <children>
      <Pane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(from -200px 0px to 0px 1800px, #a837b4, transparent);">
         <children>
            <Text fx:id="txtOrderNumber" fill="WHITE" layoutX="95.0" layoutY="316.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order number: XXXXXXX">
               <font>
                  <Font name="Arial Rounded MT Bold" size="20.0" />
               </font></Text>
            <Text fx:id="txtOrderTotal" fill="WHITE" layoutX="15.0" layoutY="339.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order total: XXXX">
               <font>
                  <Font name="Arial Rounded MT Bold" size="18.0" />
               </font></Text>
            <Text fx:id="txtCustomerEmail" fill="WHITE" layoutX="76.0" layoutY="74.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order information was sent to&#10;XXXXX@XXXX.COM" textAlignment="CENTER">
               <font>
                  <Font name="Arial Rounded MT Bold" size="17.0" />
               </font></Text>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="124.0" layoutY="114.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/checkmark%20(1).png" />
               </image>
            </ImageView>
            <Button fx:id="btnLogout" layoutX="15.0" layoutY="348.0" mnemonicParsing="false" onAction="#getBtnLogout" style="-fx-background-radius: 300; -fx-border-radius: 300;" stylesheets="@buttonCSS.css" text="LOGOUT" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="16.0" />
               </font></Button>
            <Button fx:id="btnBack" layoutX="275.0" layoutY="348.0" mnemonicParsing="false" onAction="#getBtnBack" style="-fx-background-radius: 222; -fx-border-radius: 222;" stylesheets="@buttonCSS.css" text="CATALOG" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="16.0" />
               </font></Button>
            <Text fill="WHITE" layoutX="53.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ORDER COMPLETE!" underline="true">
               <font>
                  <Font name="Arial Rounded MT Bold" size="30.0" />
               </font>
            </Text>
            <Text fx:id="txtBillingDate" fill="WHITE" layoutX="143.0" layoutY="293.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Billing Date: ">
               <font>
                  <Font name="Arial Rounded MT Bold" size="18.0" />
               </font>
            </Text>
         </children>
      </Pane>
   </children>
</VBox>
